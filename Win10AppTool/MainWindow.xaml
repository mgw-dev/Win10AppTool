<Window x:Name="window" 
        x:Class="Win10AppTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:views = "clr-namespace:Win10AppTool.Views"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:ThemeManager.IsThemeAware="True"
        Title="Win10AppTool" 
        Height="514" 
        Width="800"
        MinHeight="514"
        MinWidth="800"
        Loaded="MainWindow_Loaded">

    <Grid Name="gridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="800" MinWidth="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:AppxView x:Name="MainAppxView" Grid.Column="0" HorizontalAlignment="Stretch" Margin="12,0,12,0" Loaded="MainAppxView_Loaded" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" />

        <Button x:Name="btnRefresh" Content="Refresh" Height="32" Margin="12,10,0,0" Click="btnRefresh_Click" VerticalAlignment="Top" Grid.Column="1" Width="120" HorizontalAlignment="Left"/>
        <Button x:Name="btnSelAll" Content="Select All" Height="32" Margin="12,50,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120" Click="btnSelAll_Click" HorizontalAlignment="Left"/>
        <Button x:Name="btnInvSel" Content="Invert Selection" Height="32" Margin="12,90,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120" Click="btnInvSel_Click" HorizontalAlignment="Left"/>

        <CheckBox x:Name="cbExclStore" Content="Exclude Windows Store" Margin="12,130,0,0" VerticalAlignment="Top" Grid.Column="1" IsChecked="true"/>
        <CheckBox x:Name="cbAllUsers" Content="All Users" Margin="12,160,0,0" VerticalAlignment="Top" Grid.Column="1" IsChecked="true" ToolTipService.ShowOnDisabled="True" ToolTip="Delete apps for all users."/>
        <CheckBox x:Name="cbOnline" Content="Include Online Provisioned Apps" Margin="12,190,0,0" VerticalAlignment="Top" Grid.Column="1" IsChecked="true" ToolTipService.ShowOnDisabled="True" ToolTip="Apps that are downloaded automatically for each new user." />

        <Button x:Name="btnDel" Content="Delete Selected Apps" Height="32" Margin="0,0,12,12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Width="220" ToolTipService.ShowOnDisabled="True" Click="btnDel_Click"/>

        <TextBlock x:Name="tbCount" Margin="12,0,0,16" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1"/>

    </Grid>
</Window>
